<!doctype html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="col-sm-12">
      <h2>Request to be featured</h2>
      <form action='/contact' method='POST' class="form-horizontal contact-form">
        <div class="form-group">
          <div class="col-sm-6">
            <input id="name" name="name" type="text" placeholder="Name" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-6">
            <input id="email" name="email" type="email" placeholder="Email" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-6">
            <textarea name="message" placeholder="Brief description of project" class="form-control"></textarea>
          </div>
        </div>
        <input name="submit" type="submit" class="btn btn-primary"></input>
      </form>
    <div>
  </body>
</html>
